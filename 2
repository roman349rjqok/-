#include <iostream>
using namespace std;
int main() {
    const int n = 30; 
    int arr[n];
    for (int i = 0; i < n; i++)  {
        arr[i] = rand() % 100 + 1;
    }
        cout << "Начальный массив: ";
        for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
        }
        cout << endl;
        
        
        
        int minElement = arr[0], minIndex = 0;
        for (int i = 1; i < n; i++) {
            if (arr[i] < minElement) {
                minElement = arr[i];
                minIndex = i;
            }
        }
        
        cout << "malenkiy element: " << minElement << endl;
        cout << "порядковый номер: " << minIndex+1 << endl;
        
        return 0;
}
// задача с наименшьшиим элементом
